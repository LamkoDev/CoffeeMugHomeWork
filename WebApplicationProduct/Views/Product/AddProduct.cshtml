@model WebApplicationProduct.Models.ProductCreateRequestDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/css/Styl.css" />
    <title>Dodawanie produktu</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>Dodaj nowy produkt</p>
        <p>Nazwa: @Html.TextBoxFor(product => product.Name) </p>
        <p>Cena: @Html.TextBoxFor(product => product.Price)</p>
        <input type="submit" value="Zatwierdz" />
    }
    @Html.ActionLink("Wróć", "Index")

</body>
</html>
